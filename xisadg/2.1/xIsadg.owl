@prefix dc: <http://purl.org/dc/elements/1.1/> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix foaf: <http://xmlns.com/foaf/0.1#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xisadg: <https://github.com/KOST-CECO/ontologies/blob/master/xisadg#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<https://github.com/KOST-CECO/ontologies/blob/master/xisadg>
  rdf:type owl:Ontology ;
  owl:imports <http://datashapes.org/dash> ;
  owl:imports dc: ;
  owl:imports dcterms: ;
  owl:versionInfo "Created with TopBraid Composer" ;
.

xisadg:ArchivalDescription
  rdf:type rdfs:Class ;
  rdf:type sh:NodeShape ;
  rdfs:comment "Globales Element für die Beschreibung einer Verzeichnungseinheit"@de ;
  rdfs:comment "global element for an ISADG-description of an description unit"@en ;
  rdfs:comment "élement globale pour la description d'une unité de description"@fr ;
  rdfs:subClassOf rdfs:Resource ;
  sh:property [
      rdf:type sh:PropertyShape ;
      sh:path xisadg:hasCreator ;
      sh:or (
          [
            sh:datatype xsd:string ;
          ]
          [
            sh:nodeKind sh:IRI ;
          ]
        ) ;
    ] ;
  sh:property [
      rdf:type sh:PropertyShape ;
      sh:path xisadg:hasPointOfTime ;
      rdfs:comment "CC (Century)" ;
      rdfs:comment "YYYY-MM-DDThh:mm; YYYY-MM-DDThh:mm:ss" ;
      rdfs:comment "YYYY; YYYY-MM; YYYY-MM-DD" ;
      rdfs:comment "unknown" ;
      owl:equivalentProperty dcterms:created ;
      sh:datatype xsd:string ;
      sh:pattern "^unknown$|^[0-9]{2}$|^([0-9]{4})$|^([0-9]{4}\\-((0[1-9])|(1[012])))$|^([0-9]{4}\\-((0[1-9])|(1[012]))\\-(([012][0-9])|(3[01])))$|^([0-9]{4}\\-((0[1-9])|(1[012]))\\-(([012][0-9])|(3[01]))T(([01][0-9])|(2[0-3])):([0-5][0-9]))$|^([0-9]{4}\\-((0[1-9])|(1[012]))\\-(([012][0-9])|(3[01]))T(([01][0-9])|(2[0-3])):([0-5][0-9]):([0-5][0-9]))$" ;
    ] ;
  sh:property [
      rdf:type sh:PropertyShape ;
      sh:path xisadg:hasTitle ;
      sh:datatype xsd:string ;
      sh:minCount 1 ;
    ] ;
.
xisadg:Creator
  rdf:type rdfs:Class ;
  rdf:type sh:NodeShape ;
  rdfs:comment "Denominazione del/dei soggetto/i produttore/i: Identificare il soggetto (o i soggetti) produttori dell'unità di descrizione"@it ;
  rdfs:comment "Name der Provenienzstelle: Identifizierung der Provenienzstelle(n), bei der (denen) die Verzeichnungseinheit entstanden ist"@de ;
  rdfs:comment "Name of creator(s): To identify the creator (or creators) of the unit of description"@en ;
  rdfs:comment "Nom du producteur: Identifier le ou les producteurs de l'unité de description"@fr ;
  rdfs:subClassOf rdfs:Resource ;
  owl:equivalentClass dcterms:Agent ;
  owl:equivalentClass foaf:Agent ;
.
xisadg:hasArchivalDescription
  rdf:type owl:IrreflexiveProperty ;
  rdf:type owl:TransitiveProperty ;
  rdfs:domain "xisadg:ArchivalDescription"^^rdfs:Class ;
  rdfs:range "xisadg:ArchivalDescription"^^rdfs:Class ;
  rdfs:subPropertyOf dcterms:hasPart ;
.

xisadg:hasContext
  rdf:type rdf:Property ;
  rdfs:comment "Area delle informazioni sul contesto"@it ;
  rdfs:comment "Kontext"@de ;
  rdfs:comment "Zone du contexte"@fr ;
  rdfs:comment "context area"@en ;
  rdfs:label "2 context" ;
.
xisadg:hasCreator
  rdfs:comment "Denominazione del/dei soggetto/i produttore/i: Identificare il soggetto (o i soggetti) produttori dell'unità di descrizione"@it ;
  rdfs:comment "Name der Provenienzstelle: Identifizierung der Provenienzstelle(n), bei der (denen) die Verzeichnungseinheit entstanden ist"@de ;
  rdfs:comment "Name of creator(s): To identify the creator (or creators) of the unit of description"@en ;
  rdfs:comment "Nom du producteur: Identifier le ou les producteurs de l'unité de description"@fr ;
  rdfs:domain xisadg:ArchivalDescription ;
  rdfs:label "2.1 creator" ;
  rdfs:range xsd:string ;
  rdfs:range xisadg:Creator ;
  rdfs:subPropertyOf xisadg:hasContext ;
  owl:equivalentProperty dcterms:creator ;
.
xisadg:hasDates
  rdf:type rdf:Property ;
  rdfs:comment "Data/e: Identificare e segnalare la/e data/e dell'unità di descrizione"@it ;
  rdfs:comment "Date(s): To identify and record the date(s) of the unit of description"@en ;
  rdfs:comment "Date: Identifier et donner la (les) date(s) de lunité de description"@fr ;
  rdfs:comment "Entstehungszeitraum / Laufzeit: Identifizierung des Entstehungsdatums bzw. -zeitraums der in der Verzeichnungseinheit enthaltenen Unterlagen"@de ;
  rdfs:lable "1.3 dates" ;
  rdfs:subPropertyOf xisadg:hasIdentity ;
.
xisadg:hasIdentity
  rdf:type rdf:Property ;
  rdfs:comment "Area dell'identificazione"@it ;
  rdfs:comment "Identifikation"@de ;
  rdfs:comment "Zone d'identification"@fr ;
  rdfs:comment "identity statement area"@en ;
  rdfs:label "1 identity" ;
  rdfs:subPropertyOf xisadg:hasStatement ;
.
xisadg:hasPointOfTime
  rdf:type rdf:Property ;
  rdfs:comment "Point of Time / Date"@en ;
  rdfs:domain xisadg:ArchivalDescription ;
  rdfs:lable "1.3 dates" ;
  rdfs:range xsd:string ;
  rdfs:subPropertyOf xisadg:hasDates ;
  owl:equivalentProperty dcterms:created ;
.
xisadg:hasTitle
  rdfs:comment "Denominazione o titolo: Denominare l'unità di descrizione"@it ;
  rdfs:comment "Intitulé / analyse: Dénommer l'unité de description"@fr ;
  rdfs:comment "Titel: Benennung der Verzeichnungseinheit"@de ;
  rdfs:comment "Title: To name the unit of description"@en ;
  rdfs:domain xisadg:ArchivalDescription ;
  rdfs:lable "1.2 title" ;
  rdfs:range xsd:string ;
  rdfs:subPropertyOf xisadg:hasIdentity ;
  owl:equivalentProperty dcterms:title ;
.
